#for steam, make settings and friends window floating, causee they take an abnoxious amount of space
#must use 'title' and not class since they all have the same class
for_window [instance="steam" title="Steam Settings"] floating enable
#resize the friends list
for_window [instance="steam" title="Friends List"] resize set 300 0
for_window [class="^Steam$" title="^Friends$"] floating enable

